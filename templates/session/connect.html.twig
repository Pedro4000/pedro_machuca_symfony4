{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="registration-section">
    <div class='registration-form'>
    	<p class='info-intro'>Accéder à Pedro Machuca</p>
    	{{ form_start(registrationForm)}}
    	{{ form_widget(registrationForm.email)}}
        {{ form_widget(registrationForm.password) }}
        {{ form_widget(registrationForm._token, {'attr': {'class':'hidden'}}) }} 
		<button type='submit' class='submit-registation submit-connect'>Me connecter</button>
        {{ form_end(registrationForm, {'render_rest':false}) }}
</div>
{% endblock %}
